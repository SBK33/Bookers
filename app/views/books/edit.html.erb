<h1>Editing book</h1>
<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_area :body %>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<span class = "show">
  <%= link_to "Show", book_path(@book.id)%>
</span>

<span class = "back">
  <%= link_to "Back", books_path %>
</span>