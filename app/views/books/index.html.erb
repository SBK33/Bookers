<h1>Books</h1>
<!--テーブルタグで、dbの情報を表示。IDは一番上が若くなる Show Edit Destroyにリンクをつける-->

<table>
  <thead>
    <tr>
      <th><strong>Title</strong></th>
      <th><strong>Body</strong>
      </th><th></th>
    </tr>
  </thead>
  <% @books.each do |book|%>
    <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%>

            </td>
        </tr>
      </tbody>
  <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Body</p>
    <%= f.text_area :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
